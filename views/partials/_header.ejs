<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" style="display: flex; align-items: center;" href="/urls">My URLs</a>
        <a class="nav-item nav-link" style="display: flex; align-items: center;" href="/urls/new">Create New URL</a>
        <% if (!user) { %>
          <a class="nav-item nav-link" style="display: flex; align-items: center;" href="/login">Login</a>
          <a class="nav-item nav-link" style="display: flex; align-items: center;" href="/register">Register</a>
        <% } else { %>
        <p class="nav-item" style="display: flex; align-items: center; margin: 0; padding-right: 8px;">Logged in as <%= user.email %></p>
        <form class="form-inline" method="POST" action="/logout">
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Logout</button>
          </div>
        </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>